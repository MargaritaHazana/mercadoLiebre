<!-- Trayendo el head -->
<%- include('partials/head') %> 

<body>
  <!-- Trayendo el header -->
  <%- include('partials/header') %>
   
	<main>
		<section class="productos-home">
      <h3 class="title">Todos los productos:</h3>
			<section class="seccion1">
        <% listaProductos.forEach(producto => { %>
            <div class="prod">
              <a href="/product/detail/<%= producto.id %>/<%= producto.category %>">
                <img src="/images/products/<%= producto.image %>" alt="foto">
                <section class="camion">
                  <i class="fas fa-truck"></i>
                </section>
                <div class="precio-total">
                  <p class="precio">
                    <% let descuento = producto.price * (producto.discount/100) %> 
                    <% let precioDescuento = Math.round(producto.price - descuento) %> 
                    <% const toThousand = n =>
                  n.toString().replace(/\B(?=(\d{3})+(?!\d))/g,
                  "."); %> 
                    <%= toThousand(precioDescuento)%>
                  </p>
                  <p class="descuento"><%= producto.discount + '%' + 'OFF' %></p>
                  <p class="descripcion">
                  <%= producto.discount %> 
                  </p>
                </div>
              </a>
            </div>
        <% }) %>
      </section>
  </main>
  <!-- Trayendo el footer -->
  <%- include('partials/footer.ejs') %> 

</body>
</html>